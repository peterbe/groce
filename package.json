{
  "private": true,
  "name": "groce",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "post-process-build": "node scripts/post-process-build.js",
    "serve": "sirv build --port 8080 --cors --single",
    "emulate": "nf --procfile Procfile.emulator start",
    "emulator:dev": "PREACT_APP_USE_EMULATOR=true yarn dev",
    "dev": "PREACT_APP_GIT_VERSION_INFO=$(git log --pretty=format:'%H|%cI' -n 1) preact watch --refresh --no-sw",
    "emulator": "cd functions && yarn serve",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:watch": "esw --watch --color 'src/**/*.{ts,tsx}'",
    "e2e": "playwright test",
    "pretty": "prettier --check ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "@types/smoothscroll-polyfill": "0.3.1",
    "@types/sortablejs": "1.15.0",
    "bootstrap": "5.2.3",
    "copy-to-clipboard": "3.3.3",
    "dayjs": "1.11.7",
    "firebase": "9.18.0",
    "party-js": "2.2.0",
    "preact": "^10.15.1",
    "preact-cli-plugin-env-vars": "1.2.1",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.1.1",
    "preact-render-to-string": "^5.2.6",
    "preact-router": "^4.1.0",
    "rough-viz": "1.0.6",
    "sass": "1.57.1",
    "sass-loader": "10.1.1",
    "smoothscroll-polyfill": "0.4.4",
    "sortablejs": "1.15.0"
  },
  "devDependencies": {
    "@playwright/test": "1.32.1",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.2",
    "@types/cheerio": "0.22.31",
    "@types/webpack-env": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "cheerio": "1.0.0-rc.12",
    "css-loader": "^6.7.3",
    "eslint": "^8.36.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-plugin-playwright": "0.12.0",
    "eslint-watch": "8.0.0",
    "firebase-tools": "11.25.1",
    "foreman": "3.0.1",
    "got": "12.5.3",
    "http-server": "14.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "minimalcss": "0.11.3",
    "preact-cli": "^3.4.5",
    "prettier": "^2.8.7",
    "serve": "14.2.0",
    "sirv-cli": "^2.0.2",
    "typescript": "^5.0.2"
  },
  "resolutions": {
    "node-fetch": ">=2.6.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:playwright/playwright-test",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "# eslint-config-preact drags in 'plugin:jest/recommended' so disabling": 0,
      "jest/no-test-callback": 0,
      "jest/no-deprecated-functions": 0,
      "# See https://github.com/typescript-eslint/typescript-eslint/blob/master/packages/eslint-plugin/docs/rules/no-duplicate-imports.md": 0,
      "no-duplicate-imports": "off",
      "@typescript-eslint/no-duplicate-imports": [
        "error"
      ]
    },
    "ignorePatterns": [
      "build/"
    ]
  }
}
