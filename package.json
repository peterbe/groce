{
  "private": true,
  "name": "groce",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "post-process-build": "node scripts/post-process-build.js",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "PREACT_APP_GIT_VERSION_INFO=$(git log --pretty=format:'%H|%cI' -n 1) preact watch --refresh",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "jest ./tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "@types/sortablejs": "1.10.6",
    "bootstrap": "5.0.1",
    "copy-to-clipboard": "3.3.1",
    "dayjs": "1.10.4",
    "firebase": "8.6.1",
    "node-sass": "5.0.0",
    "preact": "^10.5.13",
    "preact-cli-plugin-env-vars": "1.2.1",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.1.1",
    "preact-render-to-string": "^5.1.19",
    "preact-router": "^3.2.1",
    "rough-viz": "1.0.6",
    "sass-loader": "10.1.1",
    "sortablejs": "1.13.0"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.4.0",
    "@types/cheerio": "0.22.28",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.23",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cheerio": "1.0.0-rc.6",
    "css-loader": "^5.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-preact": "^1.1.1",
    "firebase-tools": "9.10.2",
    "got": "11.8.2",
    "http-server": "0.12.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "jest-puppeteer": "5.0.4",
    "lint-staged": "^11.0.0",
    "minimalcss": "0.11.2",
    "preact-cli": "^3.0.5",
    "prettier": "^2.3.0",
    "serve": "11.3.2",
    "sirv-cli": "^1.0.11",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "node-fetch": ">=2.6.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  }
}
