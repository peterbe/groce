{
  "private": true,
  "name": "groce",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build",
    "post-process-build": "node scripts/post-process-build.js",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "PREACT_APP_GIT_VERSION_INFO=$(git log --pretty=format:'%H|%cI' -n 1) preact watch",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "test": "jest ./tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "@types/sortablejs": "1.10.6",
    "bootstrap": "5.0.0-alpha1",
    "copy-to-clipboard": "3.3.1",
    "firebase": "7.19.1",
    "node-sass": "4.14.1",
    "preact": "^10.4.8",
    "preact-cli-plugin-env-vars": "1.2.1",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.1.10",
    "preact-router": "^3.2.1",
    "sass-loader": "9.0.3",
    "sortablejs": "1.10.2"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.3.0",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^26.0.4",
    "@types/webpack-env": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "cheerio": "1.0.0-rc.3",
    "css-loader": "^4.2.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "http-server": "0.12.3",
    "husky": "^4.2.1",
    "jest": "^26.1.0",
    "jest-preset-preact": "^4.0.0",
    "jest-puppeteer": "4.4.0",
    "lint-staged": "^10.2.13",
    "minimalcss": "0.10.0",
    "preact-cli": "^3.0.1",
    "prettier": "^2.1.1",
    "sirv-cli": "^1.0.6",
    "typescript": "^3.9.7"
  }
}
